@{
    ViewData["Title"] = "Settings";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    .settings-card {
        transition: all 0.3s ease;
        border-radius: 12px;
        cursor: pointer;
    }

        .settings-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }

    .settings-icon {
        font-size: 40px;
        color: #0d6efd;
    }

    .settings-card-danger:hover {
        background: #ffe5e5 !important;
        border-color: #ff4d4d !important;
    }

    .settings-card a {
        text-decoration: none;
        color: inherit;
    }
</style>


<div class="container mt-5">

    <h2 class="mb-4 fw-bold">
        <i class="bi bi-gear-fill"></i> Settings
    </h2>

    <div class="row g-4">

        <!-- Profile Settings -->
        <div class="col-md-4 col-sm-6">
            <a href="/Profile/Index">
                <div class="card shadow-sm p-4 text-center settings-card">
                    <i class="bi bi-person-circle settings-icon"></i>
                    <h5 class="mt-3 fw-bold">Profile Settings</h5>
                    <p class="text-muted small">View and update your personal information.</p>
                </div>
            </a>
        </div>

        <!-- Change Password -->
        <div class="col-md-4 col-sm-6">
            <a href="/Profile/ChangePassword">
                <div class="card shadow-sm p-4 text-center settings-card">
                    <i class="bi bi-shield-lock-fill settings-icon"></i>
                    <h5 class="mt-3 fw-bold">Change Password</h5>
                    <p class="text-muted small">Update your account password securely.</p>
                </div>
            </a>
        </div>

        <!-- Delete Account -->
        <div class="col-md-4 col-sm-6">
            <a href="/Profile/DeleteAccount">
                <div class="card shadow-sm p-4 text-center settings-card settings-card-danger border-danger">
                    <i class="bi bi-trash-fill text-danger settings-icon"></i>
                    <h5 class="mt-3 fw-bold text-danger">Delete Account</h5>
                    <p class="text-muted small">Permanently delete your account.</p>
                </div>
            </a>
        </div>

        <!-- Notification Settings -->
        <div class="col-md-4 col-sm-6">
            <a href="#">
                <div class="card shadow-sm p-4 text-center settings-card">
                    <i class="bi bi-bell-fill settings-icon"></i>
                    <h5 class="mt-3 fw-bold">Notifications</h5>
                    <p class="text-muted small">Manage notification preferences. (Coming Soon)</p>
                </div>
            </a>
        </div>

        <!-- Theme Settings -->
        <div class="col-md-4 col-sm-6">
            <a href="#">
                <div class="card shadow-sm p-4 text-center settings-card">
                    <i class="bi bi-moon-stars-fill settings-icon"></i>
                    <h5 class="mt-3 fw-bold">Theme Mode</h5>
                    <p class="text-muted small">Switch between Light and Dark mode. (Coming Soon)</p>
                </div>
            </a>
        </div>

        <!-- Security Settings -->
        <div class="col-md-4 col-sm-6">
            <a href="#">
                <div class="card shadow-sm p-4 text-center settings-card">
                    <i class="bi bi-shield-check settings-icon"></i>
                    <h5 class="mt-3 fw-bold">Security</h5>
                    <p class="text-muted small">Advanced account protection tools. (Coming Soon)</p>
                </div>
            </a>
        </div>

    </div>

</div>
