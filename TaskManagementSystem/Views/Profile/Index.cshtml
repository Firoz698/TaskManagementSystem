@model TaskManagementSystem.Models.User

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-lg border-0 rounded-4">

                <!-- Header -->
                <div class="card-header bg-gradient bg-primary text-white text-center py-4 rounded-top">
                    <h2 class="fw-bold mb-0">My Profile</h2>
                </div>

                <!-- Body -->
                <div class="card-body p-4">

                    <!-- Profile Image -->
                    <div class="text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.PhotoPath))
                        {
                            <img src="@Model.PhotoPath"
                                 class="rounded-circle shadow"
                                 style="width: 140px; height: 140px; object-fit: cover; border: 4px solid #0d6efd;" />
                        }
                        else
                        {
                            <img src="/images/default-user.png"
                                 class="rounded-circle shadow"
                                 style="width: 140px; height: 140px; object-fit: cover; border: 4px solid #0d6efd;" />
                        }
                        <h4 class="mt-3 fw-bold">@Model.UserName</h4>
                        <p class="text-muted">@Model.Role?.Name</p>
                    </div>

                    <!-- Details Section -->
                    <div class="row">

                        <div class="col-md-6 mb-3">
                            <div class="profile-box p-3 rounded shadow-sm">
                                <h6 class="text-primary fw-bold"><i class="bi bi-envelope"></i> Email</h6>
                                <p class="mb-0">@Model.Email</p>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="profile-box p-3 rounded shadow-sm">
                                <h6 class="text-primary fw-bold"><i class="bi bi-telephone"></i> Contact</h6>
                                <p class="mb-0">@Model.Contact</p>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="profile-box p-3 rounded shadow-sm">
                                <h6 class="text-primary fw-bold"><i class="bi bi-geo-alt"></i> Address</h6>
                                <p class="mb-0">@Model.Address</p>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="profile-box p-3 rounded shadow-sm">
                                <h6 class="text-primary fw-bold"><i class="bi bi-info-circle"></i> About</h6>
                                <p class="mb-0">@Model.About</p>
                            </div>
                        </div>

                    </div>

                    <!-- Buttons -->
                    <div class="text-center mt-4">
                        <a href="/Account/Edit/@Model.Id" class="btn btn-warning px-4 me-2">
                            <i class="bi bi-pencil-square"></i> Edit Profile
                        </a>

                        <a href="/Home/Index" class="btn btn-secondary px-4">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>
                    </div>

                </div>

            </div>

        </div>
    </div>

</div>

<!-- Extra CSS for better UI -->
<style>
    .profile-box {
        background: #f8f9fa;
        transition: 0.3s;
    }

        .profile-box:hover {
            background: #eef3ff;
            transform: translateY(-3px);
        }
</style>
